container_commands:
  01_migrate:
    command: 'source /opt/python/run/venv/bin/actiate && python app/manage.py makemigrations'
    command: 'source /opt/python/run/venv/bin/activate && python app/manage.py migrate --noinput
      leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python mysite/manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python mysite/manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "mysite.settings"
    "PYTHONPATH": "/var/app/current:$PYTHONPATH"

  "aws:elasticbeanstalk:environment:proxy:staticfiles":
    "/static": "static/"